<h1>New Record </h1>
<% if @var.errors.present? %>
    <p>The following error prevented your photo for being saved</p>
    <ul>
      <% @var.errors.full_messages.each do |message| %>
       <li> <%= message %></li>
       <% end %>
   </ul>
<% end %>


<%= form_tag(photos_path) do %> 
    
    <label for="caption"> Caption
        <input type="text"  id="caption"    name="caption"  value=<%=@var.caption%> >
    </label>
    <label for="photo"> URL
        <input  type="text" id="photo"      name="photo"   value=<%=@var.photo%> >
    </label>
    <input type="submit">
    
<% end %>

